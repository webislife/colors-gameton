datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id  Int @id @default(autoincrement())
  nickname    String   @unique
  token String @unique
  level Int
  colors Color[]
  levels Level[]
}

model Color {
  id  Int @id @default(autoincrement())
  user  User @relation(fields: [userId], references: [id])
  userId Int
  color String
}

model Level {
  id  Int @id @default(autoincrement())
  level Int
  user  User @relation(fields: [userId], references: [id])
  userId Int
  score Int
  miss  Int
  shots Int
}